{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".git/"
            ],
            "filetypes": [
                "go"
            ]
        },
        "intelephense": {
            "command": "intelephense",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "php"
            ],
            "initializationOptions": {
                "storagePath": "~/.coc-phpls"
            }
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "rust",
        "go",
        "php",
        "json"
    ]
}
